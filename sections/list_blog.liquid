<div class="grid grid-cols-3 gap-8">
{% for article in blogs.news.articles %}
    <a class="{{ article.url }}">
      <div class=" aspect-video w-full">
        <img src="{{ article.image | img_url : "master" }}" alt="" class="w-full h-full object-cover">
        {{- article.title }}
      </div>
    </a>



{% endfor %}
</div>
{% schema %}
  {
    "name": "Blog",
    "tag": "section",
    "class": "blog",
    "settings": [
        {
          "type": "range",
          "id": "column_product",
          "label": "Column Product",
          "default": 4,
          "min": 1,
          "max": 4,
          "step": 1
        },
        {
          "type": "range",
          "id": "max_product",
          "label": "Max Product",
          "default": 8,
          "min": 4,
          "max": 20,
          "step": 1
        },
        {
          "type": "range",
          "id": "size_heading",
          "label": "Size Heading",
          "default": 36,
          "min": 0,
          "max": 100,
          "step": 1
        },
        {
          "type": "range",
          "id": "size_title",
          "label": "Size Title Product",
          "default": 24,
          "min": 0,
          "max": 100,
          "step": 1
        },
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "label": "Color Scheme",
          "default": "background-1"
        },
        {
          "type":"select",
          "id": "aspect_ratio",
          "label": "Aspect Ratio Image",
          "options": [
            {
              "value": "square",
              "label": "Square"
            },
            {
              "value": "portrait",
              "label": "Portrait"
            },
            {
              "value": "auto",
              "label": "Auto"
            }
          ],
          "default": "square"
        },
        {
          "type": "range",
          "id": "padding_top",
          "label": "Padding Top",
          "default": 50,
          "min": 0,
          "max": 100,
          "step": 1
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "label": "Padding Bottom",
          "default": 50,
          "min": 0,
          "max": 100,
          "step": 1
        }
        
    ],
    "presets": [
      {
        "name": "List Blog"
      }
    ]
  }
{% endschema %}