<div class="footer max-w-xl mx-auto px-12">
  <h2 class="text-red-600">Footer Title</h2>
  <div class="grid grid-cols-3 gap-3 ">
    {% if section.blocks[0] %}
      <div class="flex flex-col justify-center items-center text-start">
        <h2>{{ section.blocks[0].settings.heading }}</h2>
        <p>{{ section.blocks[0].settings.subtext }}</p>
      </div>
    {% endif %}
    {% if section.blocks[1] %}
      <div class="flex flex-col justify-center items-center text-start">
        <h2>{{ section.blocks[1].settings.heading }}</h2>
        <ul class="gap-10 hidden items-center text-sm md:flex">
          {% for link in section.blocks[1].settings.navigation.links -%}
            <li>{{ link.title | link_to: link.url }}</li>
          {%- endfor %}
        </ul>
      </div>
    {% endif %}
    {% if section.blocks[2] %}
      <div class="flex flex-col justify-center items-center text-start">
        {{ section.blocks[2].settings.image | img_url: 'master' | img_tag }}
      </div>
    {% endif %}
  </div>
</div>
{% schema %}
  {
    "name": "Footer",
    "tag": "footer",
    "class": "footer",
    "settings": [

      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color Scheme",
        "default": "background-1"
      }, {
        "type": "range",
        "id": "padding_top",
        "label": "Padding Top",
        "default": 15,
        "min": 0,
        "max": 100,
        "step": 1
      }, {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding Bottom",
        "default": 15,
        "min": 0,
        "max": 100,
        "step": 1
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Text",
        "settings": [
          {
            "type": "inline_richtext",
            "id": "heading",
            "default": "Heading",
            "label": "Heading "
          }, {
            "type": "richtext",
            "id": "subtext",
            "default": "<p>Share contact information, store details, and brand content with your customers.</p>",
            "label": "Sub Text"
          }
        ]
      }, {
        "type": "link_list",
        "name": "Link List",
        "settings": [
          {
            "type": "inline_richtext",
            "id": "heading",
            "default": "Quick Link",
            "label": "Quick Link"
          }, {
            "type": "link_list",
            "id": "navigation",
            "label": "Navigation Menu",
            "default": "main-menu"
          }
        ]
      }, {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "range",
            "id": "size_img1",
            "label": "Image Width",
            "max": 100,
            "min": 0,
            "step": 1,
            "default": 40,
            "unit": "px"
          }, {
            "type": "select",
            "id": "img_position",
            "label": "Image alignment",
            "options": [
              {
                "value": "center",
                "label": "Center"
              }, {
                "value": "left",
                "label": "Left"
              }, {
                "value": "right",
                "label": "Right"
              }
            ],
            "default": "center"
          }
        ]
      }
    ]
  }
{% endschema %}