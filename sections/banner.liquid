{% schema %}
  {
    "name": "Banner Content",
    "tag": "section",
    "class": "section_wrapper",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "List Block",
        "settings": [
          {
            "type": "text",
            "id": "item_title",
            "label": "Title"
          }, {
            "type": "text",
            "id": "item_text",
            "label": "DESC"
          }, {
            "type": "image_picker",
            "id": "item_img",
            "label": "Image"
          }

        ]
      }
    ],
    "presets": [
      {
        "name": "Banner Content"
      }
    ]
  }
{% endschema %}