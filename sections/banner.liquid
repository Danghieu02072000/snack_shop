  <img
    src="../src/img/img-bg4.png"
    alt=""
    class="hidden xs:block absolute top-10 right-24">
  <img
    src="../src/img/img-bg5.png"
    alt=""
    class="hidden xs:block absolute top-14 right-12">
  <img
    src="../src/img/img-bg6.png"
