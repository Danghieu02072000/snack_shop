<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<div class=" text-center"> 
  
  <h3 class="text-3xl xs:text-4xl text-orange-f4 font-highlights mb-2 aos-init aos-animate" data-aos="fade-up" data-aos-delay="300" data-aos-once="true">{{ section.settings.title }}</h3>
  <h2 class="text-4xl xs:text-6xl font-bold max-w-[432px] mb-14 mx-auto aos-init aos-animate" data-aos="fade-up" data-aos-delay="300" data-aos-once="true">{{ section.settings.heading }}</h2>
  <p class="" data-aos="fade-up" data-aos-delay="400" data-aos-once="true">{{ section.settings.desc }}</p>
</div>

{% schema %}
  {
    "name": "Heading Section",
    "tag": "section",
    "class": "section_wrapper",
    "settings": [
      {
        "type" : "inline_richtext",
        "id" : "title",
        "label" : "Title"
      },
        {
        "type" : "color",
        "id" : "text_color",
        "label" : "Text Color",
        "default": "#ff4d20"
      },
      {
        "type" : "text",
        "id" : "heading",
        "label" : "Heading"
      },

        {
        "type" : "inline_richtext",
        "id" : "desc",
        "label" : "DESC"
      }
    ],
    "presets" : [
      {
      "name" : "Block Heading"
    }
    ] 
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
  AOS.init({
  duration: 500,
})

</script>